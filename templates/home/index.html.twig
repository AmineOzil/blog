{% extends 'base.html.twig' %}

{% block title %} {% trans %}title{% endtrans %} {% endblock %}

{% block body %} 

      {% if search is defined  %}
        <div class="alert alert-primary" role="alert">
              Resultats du mot {{search}}    
        </div>
      {% endif %}
    <!-- Content Row -->
    <div class="d-flex justify-content-center">{{ knp_pagination_render(pagination) }}</div> <br/>
    <div class="row align-content-center">   
        {% for post in pagination %}
        <div class="col-md-4 mb-5" {% if loop.index is odd %}class="color"{% endif %}>
          <div class="card h-100">
            <div class="card-body">
              <h2 class="card-title">{{ post.title }}</h2>
              <p class="card-text"> {{ post.content }}</p>
            </div>
            <div class="card-footer">
              <a href="{{ path('post_show', {slug: post.slug}) }}" class="btn btn-warning btn-sm">
                {% trans %}blog.show{% endtrans %}
              </a>   
            </div>
          </div>
      </div>
      {% endfor %}
    </div>
 
    <!-- /.row -->
    
{% endblock %}
